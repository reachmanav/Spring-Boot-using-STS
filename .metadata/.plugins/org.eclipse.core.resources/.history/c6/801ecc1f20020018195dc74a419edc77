package io.javabrains.springbootstarter.topic;

import java.util.ArrayList;
import java.util.Arrays;
import java.util.List;

import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class TopicController {

	@RequestMapping("/topic")
	public List<Topic> getAllTopics()  {
		
		
		List <Topic> topicList = Arrays.asList(new Topic("spring","Spring Framework","Spring Description"),
											   new Topic("C","C Framework","C Description"),
											   new Topic("C++","C++ Framework","C++ Description")
												);
		
		
		topicList.add(new Topic("spring","Spring Framework","Spring Description"));
		topicList.add(new Topic("C","C Framework","Spring Description"));
		topicList.add(new Topic("C++","C++ Framework","Spring Description"));
		
		Arrays.as
		
		
		return topicList;
	}
}
